{
  "manifest_version": 3,
  "name": "YouthGuard",
  "version": "1.0",
  "description": "Limit the time spent on social media and adapt based on age verification.",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "webNavigation"
  ],
  "host_permissions": [
    "http://localhost:3000/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "login.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*", "*://*.instagram.com/*", "*://*.tiktok.com/*"],
      "js": ["content.js"]
    }
  ]
}
