{
    "manifest_version": 3,
    "name": "Instagram Content Filter",
    "version": "1.0",
    "description": "Filtre les posts Instagram en fonction des mots bannis.",
    "permissions": [
      "storage", 
      "activeTab", 
      "scripting"
    ],
    "host_permissions": [
      "https://www.instagram.com/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
   
    "content_scripts": [
      {
        "matches": ["https://www.instagram.com/*"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
  